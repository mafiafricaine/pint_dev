{% extends 'base.html.twig' %}
	  {% block title %}{{ pin.title }}{% endblock %}
	  {% block body %}
		<article>
			<h1>{{  pin.title }}</h1>
			<p>{{ pin.description }}</p>
			<p>Submitted {{ pin.createdAt|date }}</p>
		</article>
	
		<a href="{{ path('app_pin_edit', {id: pin.id}) }}">Edit Pin | </a>

		<a href="#" onclick="event.preventDefault(); confirm('Are you sure ?') && document.getElementById('js-pin-delete-form').submit();"
		class="btn btn-dark">Delete </a>

		<form id="js-pin-delete-form" action="{{ path('app_pin_delete', {id: pin.id}) }}" method="post" style="display: none;">
			<input type="hidden" name="_method" value="DELETE">
		</form>
		
	  {% endblock %}